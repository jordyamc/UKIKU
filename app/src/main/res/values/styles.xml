<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentLight</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.DayNight" parent="AppTheme"/>

    <style name="AppTheme.TV.Browser" parent="Theme.Leanback.Browse">
        <item name="android:colorPrimary">#424242</item>
        <item name="android:colorPrimaryDark">#1b1b1b</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="defaultBrandColor">#424242</item>
        <item name="defaultBrandColorDark">#1b1b1b</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TV.Guided" parent="Theme.Leanback.GuidedStep">
        <item name="android:colorPrimary">#424242</item>
        <item name="android:colorPrimaryDark">#1b1b1b</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="defaultBrandColor">#424242</item>
        <item name="defaultBrandColorDark">#1b1b1b</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TV.Base" parent="Theme.Leanback">
        <item name="android:colorPrimary">#424242</item>
        <item name="android:colorPrimaryDark">#1b1b1b</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="defaultBrandColor">#424242</item>
        <item name="defaultBrandColorDark">#1b1b1b</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TV.Details" parent="Theme.Leanback.Details">
        <item name="android:colorPrimary">#424242</item>
        <item name="android:colorPrimaryDark">#1b1b1b</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="defaultBrandColor">#424242</item>
        <item name="defaultBrandColorDark">#1b1b1b</item>
    </style>

    <style name="AppTheme.TV.Grid" parent="Theme.Leanback.VerticalGrid">
        <item name="android:colorPrimary">#424242</item>
        <item name="android:colorPrimaryDark">#1b1b1b</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="defaultBrandColor">#424242</item>
        <item name="defaultBrandColorDark">#1b1b1b</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Dialog.Base" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog.Base.Light" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Dialog.Base.DayNight" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button.Dropbox" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/dropbox</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Firestore" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/firestore</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Drive" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/drive</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Local" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">?colorAccentLight</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppInfo" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_color_button_text">?attr/colorSecondary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:backgroundTint">?colorSurface</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Simple" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Simple.NoBackground" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppTheme.Cardview" parent="Widget.MaterialComponents.CardView"/>

    <style name="FontMediumStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/drawable_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="NoTitleStyle" parent="AppTheme.DayNight">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ExpandedTextWhite" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="titleTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textSecondaryTitle</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="ToolTipAltStyle" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">?colorSecondaryVariant</item>
        <item name="ttlm_cornerRadius">6dp</item>
        <item name="ttlm_arrowRatio">1.2</item>
        <item name="ttlm_textStyle">@style/ToolTipAltTextStyle</item>
    </style>

    <style name="ToolTipAltTextStyle" parent="ToolTipTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
